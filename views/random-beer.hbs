<div class="container mt-5">
    <h1>RANDOM BEER!</h1>
    <hr>
    <div class="row">

        {{#each randomBeer}}

        <div class="row">


            <div class="random col-6 ">
                <img src="{{image_url}}" class="random-image" alt="{{name}}">
            </div>

            <div class=" col-6 ">
                <h2>{{name}} </h2>
                <h5>Tagline: </h5>
                <p> {{tagline}} </p>
                <h5>Description:</h5>
                <p> {{description}}</p>
                <h5>Food pairing: </h5>
                <ul>
                    {{#each food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>

            </div>
        </div>

        {{!-- {{beerpartial.hbs}} --}}
        {{/each}}
    </div>

</div>


</div>

</div>